<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>SetupAction</servlet-name>
		<servlet-class>retweeter.SetupAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SetupAction</servlet-name>
		<url-pattern>/setup</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>OAuthCallback</servlet-name>
		<servlet-class>retweeter.OAuthCallback</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OAuthCallback</servlet-name>
		<url-pattern>/oauth-callback</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CheckForUpdates</servlet-name>
		<servlet-class>retweeter.CheckForUpdates</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckForUpdates</servlet-name>
		<url-pattern>/check-for-updates</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
